<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.thoughtworks.exam.core.LogicTemplateRepository">
    <resultMap id="logicTemplateMapper" type="LogicTemplate">
        <id property="id" column="id" />
    </resultMap>

    <select id="findLogicTemplates" resultMap="logicTemplateMapper">
        select * from LogicTemplate;
    </select>

    <insert id="createLogicTemplate">
        <selectKey keyProperty="id" resultType="String" order="BEFORE">
            select uuid() from dual;
        </selectKey>
        insert into LogicTemplate(id) values(#{id,jdbcType=CHAR});
    </insert>

    <select id="getLogicTemplateById" resultMap="logicTemplateMapper">
        select * from LogicTemplate where id = #{id};
    </select>
</mapper>